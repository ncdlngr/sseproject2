<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Test Results</title>
  <!-- Bootstrap CSS CDN -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Optional: Custom Styles -->
  <link rel="stylesheet" href="/styles/auth-styles.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Test Results</h1>
        <p>Your Score: <%= score %> out of <%= totalQuestions %></p>
        <p>Your Percentage: <%= percentage.toFixed(2) %>%</p>
    
        <ul class="list-group">
          <% detailedResults.forEach(result => { %>
            <li class="list-group-item">
              <strong>Question:</strong> <%= result.question %><br>
              <strong>Your Answer:</strong> <%= result.userAnswer %><br>
              <strong>Correct Answer:</strong> <%= result.correctAnswer %><br>
              <span class="<%= result.isCorrect ? 'text-success' : 'text-danger' %>">
                <%= result.isCorrect ? 'Correct' : 'Incorrect' %>
              </span>
            </li>
          <% }); %>
        </ul>
    
        <a href="/dashboard" class="btn btn-primary mt-3">Return to Dashboard</a>
      </div>

  <!-- Bootstrap JS Bundle CDN -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
