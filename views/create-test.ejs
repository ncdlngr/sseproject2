<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Include your head content like CSS links -->
</head>
<body>
  <h1>Create a New Test</h1>
  <form action="/create-test" method="post">
    <input type="text" name="test_name" placeholder="Test Name" required>

    <select name="language_from" required>
      <% languages.forEach(function(language) { %>
        <option value="<%= getCode(language) %>"><%= language %></option>
      <% }); %>
    </select>

    <select name="language_to" required>
      <% languages.forEach(function(language) { %>
        <option value="<%= getCode(language) %>"><%= language %></option>
      <% }); %>
    </select>

    <button type="submit">Create Test</button>
  </form>
</body>
</html>
